{
  "name": "node-red-node-discord",
  "version": "3.0.0",
  "description": "Discord nodes for receiving / sending messages.",
  "scripts": {
    "add-node": "node ./utils/add-node.js",
    "copy": "copyfiles -u 2 \"./src/nodes/**/*.{png,svg}\" \"./dist/nodes/\"",
    "build:editor": "rollup -c rollup.config.editor.js",
    "build:editor:watch": "rollup -c rollup.config.editor.js -w",
    "build:runtime": "tsc -p tsconfig.runtime.json",
    "build:runtime:watch": "tsc -p tsconfig.runtime.watch.json --watch --preserveWatchOutput",
    "build": "rm -rf dist && yarn copy && yarn build:editor && yarn build:runtime",
    "test": "jest --verbose --forceExit --detectOpenHandles --colors",
    "test:watch": "jest --forceExit --detectOpenHandles --watchAll",
    "dev": "rm -rf dist && yarn copy && concurrently --kill-others --names 'COPY,EDITOR,RUNTIME' --prefix '({name})' --prefix-colors 'yellow.bold,cyan.bold,greenBright.bold,magenta.bold' 'onchange -v \"src/**/*.png\" \"src/**/*.svg\" -- yarn copy' 'yarn build:editor:watch' 'yarn build:runtime:watch'",
    "lint": "prettier --ignore-path .eslintignore --check '**/*.{js,ts,md}'; eslint --ext .js,.ts .",
    "lint:fix": "prettier --ignore-path .eslintignore --write '**/*.{js,ts,md}'; eslint --ext .js,.ts . --fix"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "engineStrict": true,
  "author": "Gago Muradyan",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madmax3365/node-red-node-discord.git"
  },
  "license": "GPL-2.0",
  "node-red": {
    "nodes": {
      "discord-token": "./dist/nodes/discord-token/discord-token.js",
      "discord-get-messages": "./dist/nodes/discord-get-messages/discord-get-messages.js",
      "discord-send-messages": "./dist/nodes/discord-send-messages/discord-send-messages.js"
    }
  },
  "dependencies": {
    "discord.js": "^12.5.1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/node-red": "^1.1.1",
    "@types/node-red-node-test-helper": "^0.2.1",
    "@types/sinon": "^9.0.10",
    "@types/supertest": "^2.0.10",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "bcrypt": "^5.0.1",
    "colorette": "^1.2.1",
    "concurrently": "^6.0.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "glob": "^7.1.6",
    "jest": "^26.6.3",
    "mustache": "^4.1.0",
    "node-red": "^1.2.9",
    "node-red-node-test-helper": "^0.2.7",
    "onchange": "^7.1.0",
    "prettier": "^2.2.1",
    "rollup": "^2.39.1",
    "ts-jest": "^26.5.2",
    "typescript": "^4.2.2"
  },
  "jest": {
    "testTimeout": 20000,
    "setupFiles": [
      "dotenv/config"
    ],
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  }
}